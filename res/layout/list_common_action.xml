<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/action_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:text="@string/prev_page"
        android:background="@drawable/action_bar_item_background"
        android:paddingRight="10dip"
        android:drawableLeft="@drawable/ic_media_previous" />

    <TextView
        android:id="@+id/action_middle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/action_bar_item_background"
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />

    <TextView
        android:id="@+id/action_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:text="@string/next_page"
        android:background="@drawable/action_bar_item_background"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:drawableRight="@drawable/ic_media_next" />

</merge>